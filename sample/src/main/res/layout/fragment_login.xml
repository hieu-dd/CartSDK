<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <vn.teko.apollo.component.common.ApolloEditText
            android:id="@+id/edtToken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter the authentication token"
            android:singleLine="true"
            app:layout_constraintTop_toTopOf="parent" />

        <vn.teko.apollo.component.button.ApolloButton
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Login"
            app:layout_constraintTop_toBottomOf="@id/edtToken" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>